<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.halo.haloandroidframework">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".TabViewIndicatorExample.example.ExampleMainActivity"
            android:label="@string/scrollable_tab" />

        <activity
            android:name=".TabViewIndicatorExample.example.ScrollableTabExampleActivity"
            android:label="@string/scrollable_tab" />

        <activity
            android:name=".TabViewIndicatorExample.example.FixedTabExampleActivity"
            android:label="@string/fixed_tab" />

        <activity
            android:name=".TabViewIndicatorExample.example.DynamicTabExampleActivity"
            android:label="@string/dynamic_tab" />

        <activity
            android:name=".TabViewIndicatorExample.example.NoTabOnlyIndicatorExampleActivity"
            android:label="@string/no_tab_only_indicator" />

        <activity
            android:name=".TabViewIndicatorExample.example.FragmentContainerExampleActivity"
            android:label="@string/work_with_fragment_container" />

        <activity
            android:name=".TabViewIndicatorExample.example.BadgeTabExampleActivity"
            android:label="@string/tab_with_badge_view" />

        <activity
            android:name=".TabViewIndicatorExample.example.CustomNavigatorExampleActivity"
            android:label="@string/custom_navigator" />

        <activity
            android:name=".TabViewIndicatorExample.example.LoadCustomLayoutExampleActivity"
            android:label="@string/tab_with_custom_layout" />

        <activity
            android:name=".materialDesign.MaterialDesignMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".materialDesign.ButtonsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".materialDesign.SwitchActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".materialDesign.ProgressActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".materialDesign.WidgetActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <activity android:name=".expandLayout.ExpandLayoutActivity"/>
    </application>

</manifest>