<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context=".Badge.BadgeFragment"
    tools:showIn="@layout/activity_badge">

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Hello World!" />

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:mbtv_backgroundColor="#EF4738"
        android:textSize="12sp"
        android:textColor="@android:color/white"
        android:text="0" />


    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:mbtv_backgroundColor="#EF4738"
        android:textColor="@android:color/black"
        android:textSize="50sp"
        android:text="3" />

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:mbtv_backgroundColor="#427fed"
        android:textColor="@android:color/white"
        android:text="9"
        android:textSize="12sp"/>

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:mbtv_backgroundColor="#36b100"
        android:textColor="@android:color/white"
        android:text="6123456789012"
        android:textSize="25sp"/>

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="57"
        app:mbtv_backgroundColor="#FB8C00"
        android:textSize="14sp"/>

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="99+"
        android:textColor="@android:color/white"
        app:mbtv_backgroundColor="#EF4738"
        android:textSize="16sp"/>

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="MaterialBadgeTextView"
        app:mbtv_backgroundColor="#FB8C00"
        android:textSize="16sp"/>

    <com.halo.uiview.badge.MaterialBadgeTextView
        android:id="@+id/just_new_feature"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:mbtv_backgroundColor="#EF4738"/>

</LinearLayout>
</ScrollView>